{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend"
    }
  ],
  "allows": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend",
      "allows": [
        {
          "id": "@secretlint/secretlint-rule-basicauth",
          "message": "Allowed generic examples in documentation",
          "pattern": {
            "match": "(user|username|pass|password|example|test|demo|localhost)",
            "flags": "i"
          }
        }
      ]
    }
  ],
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.test-temp/**",
    "**/coverage/**",
    "**/README.md",
    "**/CHANGELOG.md",
    "**/LICENSE",
    "**/package.json",
    "**/package-lock.json",
    "**/.gitignore",
    "**/examples/**"
  ]
}
