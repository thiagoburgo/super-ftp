{
  "name": "super-ftp",
  "version": "1.0.0",
  "description": "Unified TypeScript library for FTP, SFTP, and FTPS with clean abstractions, lazy connections, and maximum code reuse",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --config jest.config.ci.js --coverage",
    "test:unit": "jest --config jest.config.ci.js",
    "test:integration": "jest test/integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:ci": "jest --config jest.config.ci.js --coverage --watchAll=false",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,test}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "check-credentials": "node scripts/check-credentials-secretlint.js",
    "precommit": "npm run check-credentials && lint-staged",
    "prepush": "npm run build && npm run test:cov",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "ftp",
    "sftp",
    "ftps",
    "ftp-client",
    "sftp-client",
    "ftps-client",
    "file-transfer",
    "file-management",
    "file-upload",
    "file-download",
    "remote-files",
    "ssh",
    "ssh2",
    "tls",
    "ssl",
    "secure-ftp",
    "basic-ftp",
    "ssh2-sftp-client",
    "typescript",
    "nodejs",
    "node",
    "unified-api",
    "lazy-connection",
    "buffer-upload",
    "recursive-mkdir",
    "connection-string"
  ],
  "author": "Thiago Burgo <thiagoburgo@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thiagoburgo/super-ftp.git"
  },
  "bugs": {
    "url": "https://github.com/thiagoburgo/super-ftp/issues"
  },
  "homepage": "https://github.com/thiagoburgo/super-ftp#readme",
  "dependencies": {
    "basic-ftp": "^5.0.3",
    "ssh2-sftp-client": "^10.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.0",
    "rimraf": "^6.0.1",
    "secretlint": "^11.2.5",
    "semantic-release": "^24.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "test/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
